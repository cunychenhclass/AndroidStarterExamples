<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TemperatureConverterConfigActivity">

    <RadioGroup
        android:id="@+id/radio_converter_config"
        android:layout_width="217dp"
        android:layout_height="143dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.226">

        <RadioButton
            android:id="@+id/radio_fahrenheit_to_celsius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fahrenheit to Celsius" />

        <RadioButton
            android:id="@+id/radio_fahrenheit_to_kevin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fahrenheit to Kelvin" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_confirm_config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.689" />
</androidx.constraintlayout.widget.ConstraintLayout>